{
  "manifest_version": 3,
  "name": "健保雲端資料擷取器2.0",
  "version": "1.0.0311",
  "description": "健保雲端資料擷取器, beta version 1.0",
  "permissions": ["webRequest", "storage", "scripting", "clipboardWrite", "notifications"],
  "host_permissions": [
    "https://medcloud2.nhi.gov.tw/*",
    "https://nhitw-mock-api.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "19": "images/icon19.png",
      "38": "images/icon38.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://medcloud2.nhi.gov.tw/imu/*",
        "http://localhost:3000/*",
        "https://nhitw-mock-api.vercel.app/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
